<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.MaterialComponents.Bridge"
    tools:ignore="MissingDefaultResource">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="14.0dip">
        <LinearLayout
            android:orientation="vertical"
            android:padding="8.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/custom_circle_btn2"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/baseline_close_24" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="14sp"
                android:fontFamily="serif"
                android:paddingBottom="12dp"
                android:text="@string/what_are_you_planning_to_donate"
                android:textColor="@color/blue"
                android:textSize="18.0sp"
                android:textStyle="bold" />

            <TextView
                android:textSize="14.0sp"
                android:layout_gravity="center"
                android:text="@string/donation_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/blue" />


            <LinearLayout
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="16.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/donate_following"
                        android:fontFamily="serif"
                        android:layout_marginTop="14sp"
                        android:paddingBottom="12dp"/>

                    <CheckBox
                        android:id="@+id/food_stuffs"
                        android:layout_width="wrap_content"
                        android:text="@string/food_stuffs"
                        android:textColor="@color/blue"
                        android:fontFamily="@font/mont"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:buttonTint="@color/colorAccent"
                        android:layout_height="wrap_content"/>

                    <CheckBox
                        android:id="@+id/clothings"
                        android:layout_width="wrap_content"
                        android:text="@string/clothing_s"
                        android:fontFamily="@font/mont"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/blue"
                        android:buttonTint="@color/colorAccent"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:id="@+id/education_materials"
                        android:layout_width="wrap_content"
                        android:text="@string/educational_materials"
                        android:textColor="@color/blue"
                        android:fontFamily="@font/mont"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:buttonTint="@color/colorAccent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/_18sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/CustomInputStyle"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginBottom="8dp"
                        android:textColorHint="@color/gray2"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeWidth=".8dp"
                        app:errorTextColor="@color/colorAccent"
                        app:hintTextColor="@color/blue"
                        app:passwordToggleEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/donor_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/phone_number_eg_254703_xxx_xxx"
                            android:inputType="phone"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:fontFamily="@font/mont"
                            android:textColor="@color/blue"
                            android:textColorHint="@color/blue"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/CustomInputStyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textColorHint="@color/gray2"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeWidth=".8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:passwordToggleEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/donor_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_your_location_mombasa_town"
                            android:inputType="text"
                            android:lines="1"
                            android:fontFamily="@font/mont"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:textColor="@color/blue"
                            android:textColorHint="@color/blue"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </LinearLayout>


            <Button
                android:id="@+id/donate"
                android:layout_width="200dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/custom_btn"
                android:text="@string/donate_"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:icon="@drawable/baseline_volunteer_activism_white_24" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>