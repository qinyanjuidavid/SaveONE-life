
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/motivation_card"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8.0dip"
        app:cardElevation="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/org_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:orientation="horizontal"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/org_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:layout_marginStart="4dp"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/mont"
                        android:text="@string/name"/>

                    <TextView
                        android:id="@+id/org_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:layout_marginStart="4dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/mont"
                        android:text="@string/name"/>

                    <TextView
                        android:id="@+id/org_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_marginStart="4dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/mont"
                        android:text="@string/name"/>
                </LinearLayout>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/floatingActionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:backgroundTint="@color/colorAccent"
                        android:clickable="true"
                        android:focusable="true"
                        app:srcCompat="@drawable/baseline_location_on_24"
                        app:useCompatPadding="true" />


                </RelativeLayout>



            </LinearLayout>

            <Button
                android:id="@+id/detailed_view_btn"
                android:layout_width="200dp"
                android:textStyle="bold"
                android:fontFamily="@font/mont"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="@string/learn_more"
                android:background="@drawable/custom_no_r_btn"
                android:layout_marginBottom="12dp"
                android:layout_height="32dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>